<?xml version="1.0"
      encoding="utf-8"?>

<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Screener.MobileApp.MainPage">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="10*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="7*"/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>

        <Entry x:Name="IpAdress"
               Grid.Row="0"
               Grid.Column="0"
               Text="127.0.0.1"/>

        <Button Grid.Row="0"
                Grid.Column="1"
                Text="Connect"
                Clicked="OnConnect"/>

        <Image x:Name="ScreenImage"
               Grid.Row="1"
               Grid.Column="0"
               Grid.ColumnSpan="2"
               BackgroundColor="DeepPink"
               Aspect="AspectFill"/>
    </Grid>
</ContentPage>